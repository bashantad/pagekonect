<div id="my-carousel" class="carousel slide" data-ride="carousel" style="height:535;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <% @all_videos.each_with_index do |video, index| %>
            <li data-target="#my-carousel" data-slide-to="<%=index%>" class="<%=(video.id==@video.id) ? "active" : ""%>"></li>
        <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <%@all_videos.each_with_index do |video, index|%>
            <div class="item <%="active" if video.id == @video.id %>">
                <%=render "show_block", :video => video%>
            </div>
        <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#my-carousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div>
