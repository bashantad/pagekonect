<!DOCTYPE html>
<html>
<head>
	<title>Pagekonect</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div style="padding-top:60px;">
		<% if notice %>
		<div class="alert alert-success"><%= notice %></div>
		<% end %>
		<% if alert %>
		<div class="alert alert-danger"><%= alert %></div>
		<% end %>
	</div>
		<header role="banner" class="navbar navbar-default navbar-fixed-top bs-docs-nav">
		  <div class="container">
		    <div class="navbar-header">
		      <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
					<%=link_to "Home", root_path, :class => "navbar-brand"%>
		    </div>
		    <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">
		      <ul class="nav navbar-nav">
						<% if user_signed_in?%>
		        <li>
							<%=link_to "Edit account", edit_user_registration_path%>
		        </li>
		        <li>
							<%=link_to "Upload profile picture", new_upload_path%>
		        </li>
		        <li>
							<%=link_to "Logout", destroy_user_session_path, :method => :delete%>
		        </li>
						<%else%>
		        <li>
							<%=link_to "Sign in", new_user_session_path%>
		        </li>
						<%end%>
		      </ul>
		      <ul class="nav navbar-nav navbar-right">
		        <li>
		          <%=link_to "About us", "#about_us_path"%>
		        </li>
		      </ul>
		    </nav>
		  </div>
		</header>
		<div class="row" id="user-auth">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-info">
					<div class="panel-heading">
						<h3 class="panel-title"><i class="fa fa-user"></i> <%=yield(:heading)%></h3>
					</div>
					<div class="panel-body">
						<%=yield%>
					</div>
					<div class="panel-footer">
						<%if params[:controller] == "uploads"%>
						need to replace content
						<%else%>
							<%= render "devise/shared/links" %>
					<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
