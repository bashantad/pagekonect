<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><%= @deal.title %></h3>
			</div>
			<div class="panel-body" style="padding:0 15px">
                <div class="control-group clearfix">
                    <div class="pull-right">
                        <small><strong>Created at : </strong><%=@deal.created_at.localtime.to_datetime.strftime("%l %p %A, %d %B %Y")%></small>
                    </div>
                </div>
				<div class="row">
				    <div class="col-md-5">
						<%=image_tag @deal.image.url(:medium), :class => "responsive full-image"%>
						<div class="image-description">
						<%=@deal.image_description%>
					</div>
					</div>
					<div class="col-md-7 text-justify">
						<%= @deal.description.html_safe %>
						<div>
						    <strong>Start at:  </strong> <%=@deal.start_time%><br>
						    <strong>End at: </strong> <%=@deal.end_time%><br>
						    <strong>Original price:  </strong>$<%=@deal.old_price%><br>
						    <strong>New price: </strong>$<%=@deal.new_price%><br>
						    <strong>Location: </strong> 
						        <a  href="http://maps.google.com?q=<%=@deal.address%>"><%=@deal.address%></a><br>
						        <%=render "contents/url_links", :row => @deal%>
						</div>
					</div>
				</div>
			</div>
			<%if current_user == @deal.user%>
			<div class="panel-footer">
				<div class="control-group clearfix">
					<div class="pull-left">
						<%= link_to 'Edit', edit_deal_path(@deal), :class => "btn btn-info btn-sm" %>
					</div>
					<div class="pull-right">
						<%= link_to 'Delete', @deal, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %>
					</div>
				</div>
			</div>
			<%end%>

			<div class="full-block votable-wrapp" id="votable-wrapp-<%= @deal.id %>">
				<%= render partial: "contents/votable_wrapp", locals: { content: @deal } %>
			</div>
			
			<div id="comment-wrapp">
				<% if user_signed_in? %>
				<div class="comments">
					<%= form_for [@deal, @deal.comments.new(user_id: current_user.id)] do |f| %>
					<div class="input-group">
						<span class="input-group-btn">
							<%=image_tag(current_user.avatar.url(:thumb), :class => "mini-icon")%>
						</span>
							
						<%= f.hidden_field :commentable_id %>
						<%= f.hidden_field :commentable_type %>
						<%= f.hidden_field :user_id %>
						<%= f.text_field :description, :class => "form-control" %>
						<span class="input-group-btn">
							<%= f.submit "Comment", :class => "btn btn-default btn-comment" %>
						</span>
					</div>
					<% end %>
				</div>
				<% end %>
				
				
				<%@deal.comments.each do |comment|%>
				<% if comment.persisted? %>
				<div class="comments">
					<div class="control-group clearfix">
						<div class="pull-left">
							<%=render "layouts/person", :person => comment.user%>
						</div>
						<div class="pull-left" style="margin:12px;">
							<%=comment.description%> &nbsp;
							<%if current_user == comment.user%>
							<%=link_to '<span class="fa fa-times text-danger"></span>'.html_safe, deal_comment_path(@deal, comment), :method => :delete%>
							<%end%>
						</div>
					</div>
				</div>
				<%end%>
				<%end%>
				
			</div>
		</div>
	</div>
</div>