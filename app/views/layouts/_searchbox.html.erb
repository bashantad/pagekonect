<div class="row" id="search-engine">
	<div class="search-wrapper">
		<h2 class="text-center"><span id="time"></span></h2>
		<div class="text-center date-wrapp"><span  id="date"></span></div>
		<div class="input-group add-on">
			<div class="input-group-btn">
			    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
			      <i class="fa fa-list fa-2x"></i>
			    </button>
			    <ul class="dropdown-menu">
						<li></i><%=link_to "&nbsp;Home".html_safe, root_path, :class => "fa fa-home"%></li>
						<li class="divider"></li>
						<%if user_signed_in?%>
						<li><%=link_to "&nbsp;Edit your account".html_safe, edit_user_registration_path, :class => "fa fa-pencil"%></li>
						<li class="divider"></li>
		        <li><%=link_to "&nbsp;Upload profile picture".html_safe, profile_upload_avatar_path(current_user), :class => "fa fa-upload"%></li>
						<li class="divider"></li>
						 <li><%=link_to "&nbsp;Upload Banner picture".html_safe, profile_upload_banner_path(current_user), :class => "fa fa-upload"%></li>
						<li class="divider"></li>
						<li><%=link_to "&nbsp;View profile picture".html_safe, profile_path(current_user.id), :class => "fa fa-camera-retro"%></li>
						<li class="divider"></li>
						<li><%=link_to "&nbsp;News".html_safe, news_index_path, :class => "fa fa-info-circle"%></li>
						<li class="divider"></li>
   					<li><%=link_to "&nbsp;Logout".html_safe, destroy_user_session_path, :method => 'delete', :class => "fa fa-sign-out" %></li>
						<%else%>
			      <li><%=link_to "&nbsp;Sign in".html_safe, new_user_session_path, :class => "fancybox fa fa-sign-in"%></li>
						<li class="divider"></li>
			      <li><%=link_to "&nbsp;Sign up".html_safe, new_user_registration_path, :class => "fancybox fa fa-user"%></li>
						<%end%>
			    </ul>
			</div>
			<form action="" method="get">
			<input class="input-lg typeahead search-data" type="text" placeholder="What are you searching for?" id="search-data" name="keyword" >
		</form>
			<div class="input-group-btn">
				  <div class="btn-group">
		    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		      <i class="fa fa-camera fa-2x"></i>
		    </button>
		    <ul class="dropdown-menu">
		      <li><%=link_to "Take a picture", "#", :class => "fancybox"%></li>
					<li class="divider"></li>
		      <li><%=link_to "Upload picture", new_profile_path, :class => "fancybox"%></li>
		    </ul>
			</div>
			</div>
		</div>
	</div>
</div>