<!DOCTYPE html>
<html>
<head>
	<%=render "layouts/head"%>
</head>
<body>
	<div class="containers">	
		<% if notice %>
		<div class="alert alert-success flash-msg"><%= notice %></div>
		<% end %>
		<% if alert %>
		<div class="alert alert-danger flash-msg"><%= alert %></div>
		<% end %>
		<%if params[:controller] != "dashboard"%>
		<%=render "layouts/searchbox"%>
		<%end%>
		<%= yield %>
	</div>	
</body>
</html>
