<%= form_for(@video) do |f| %>
  <% if @video.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h4>

      	<ul>
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-item">
      <label>Give this video a title</label>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-item">
    <label>What is this video about?</label>
    <%= f.text_area :description, :class => "form-control", :rows => 4 %>
  </div>
    
    <div class="form-item">
        <label>Attach links</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-youtube-play fa-lg"></i></span>
            <%=f.url_field :url, :class => "form-control", :placeholder => "Paste youtube link"%>
        </div>
    </div>
    <div class="form-item">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-facebook-square fa-lg"></i></span>
            <%=f.url_field :facebook_url, :class => "form-control", :placeholder=>"Paste Facebook"%>
        </div>
    </div>
    <div class="form-item">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-twitter-square fa-lg"></i></span>
            <%=f.url_field :twitter_url, :class => "form-control", :placeholder => "Paste Twitter"%>
        </div>
    </div>
    <div class="form-item">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-google-plus-square fa-lg"></i></span>
            <%=f.url_field :google_plus_url, :class => "form-control", :placeholder => "Paste Google+"%>
        </div>
    </div>
    
	<div class="form-item">
		<label>Would you like people to search this on search engine?</label>
		<%=f.check_box :is_searchable%> Yes
	</div>

  <div class="form-item">
      <label>Choose category</label>
      <% Event::CATEGORIES.each do |category| %>
          <br>
          <%= check_box_tag "video[category][]", category, @video.category_list.include?(category.downcase) %>
          <%= category %>
      <% end %>
  </div>

  <div class="actions">
    <%= f.submit(:class => "btn btn-custom") %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
<% end %>
