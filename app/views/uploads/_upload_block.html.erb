<div class="col-md-3 col-sm-6 video-block">
    <div class="content-block">
        <%=render "layouts/person", :person => row.user %> 
        <span class="created-info">uploaded this photo on <%created_at = row.created_at.localtime.to_datetime%>
        <%=created_at.strftime("%d %B %Y") %> at <%=created_at.strftime("%I:%M %p")%>. </span>
        <%= truncate(row.photo_description, :length => @title_length)%><br>
        <a href="<%=upload_path(row)%>">
            <%=image_tag row.photo.url(:thumb), :class => "thumbnail block-img"%>
        </a>
        <div class="votable-wrapp" id="votable-wrapp-<%= row.id %>">
            <%= render partial: "contents/votable_wrapp", locals: { content: row } %>
        </div>
    </div>		
</div>
