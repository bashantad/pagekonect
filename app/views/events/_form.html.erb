<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this video from being saved:</h4>

      	<ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-item">
      <label>Upload an image suitable for this event</label>
	  <%=f.file_field :image%>
  </div>
  
  <div class="form-item">
      <label>Tag this image</label>
      <%=f.text_field :image_description, :class => "form-control"%>
  </div>

  <div class="form-item">
      <label>What is this event?</label>
      <%= f.text_field :title, :class => "form-control" %>
  </div>
  
  <div class="form-item">
      <label>What date does this event start?</label>
      <div class="form-group">
          <div class='input-group date' id='datetimepicker1'>
              <%=f.text_field :event_date, :class => "form-control", "data-format" => "YYYY-MM-DD hh:mm"%><span class="input-group-addon popover-btn" data-content="Click here to choose date and time"><span class="glyphicon glyphicon-calendar"></span></span>
          </div>
      </div>
  </div>
  
  <div class="form-item">
      <label>What time does this event start?</label>
      <%=f.text_field :start_time, :class => "form-control"%>
  </div>
  
  <div class="form-item">
      <label>What time does this event finish?</label>
      <%=f.text_field :end_time, :class => "form-control"%>
  </div>

  <div class="form-item">
      <label>Describe more about this event</label>
    <%= f.text_area :description, :class => "form-control", :rows => 4 %>
  </div>
           
  <div class="form-item">
      <label>Does this event have a location?</label>
     <%=f.text_field :address, :class => "form-control", :placeholder => "Where is it happening?"%>
  </div>    
  
  <div class="form-item">
      <label>Are you suggesting this event or creator?</label>
      <div class="checkbox">
          Suggesting an event? <%=f.radio_button :is_suggestor, 'suggestor'%>
      </div>
      <div class="checkbox">
          Creator of an event? <%=f.radio_button :is_suggestor, 'creator'%>
      </div>      
  </div>
  <div class="form-item">
      <label>Does this event have a website?</label>
      <%=f.url_field :url, :class => "form-control"%>
  </div>
  
  <div class="form-item">
      <label>Does this event have a facebook page?</label>
      <%=f.url_field :facebook_url, :class => "form-control"%>
  </div>
  
  <div class="form-item">
      <label>Does this event have a twitter page?</label>
      <%=f.url_field :twitter_url, :class => "form-control"%>
  </div>

  <div class="form-item">
      <label>Add Tags (separated by commas)</label>
      <%=f.select :category, options_for_select(Event::CATEGORIES), :class => "form-control"%>
  </div>
  
  <div class="form-item">
      <label>Would you like people to search this on search engine?</label>
	  <%=f.check_box :is_searchable%> Yes
  </div>

  <div class="actions">
    <%= f.submit(:class => "btn btn-custom") %>
  </div>
<% end %>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>
