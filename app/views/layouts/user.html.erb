<!DOCTYPE html>
<html>
<head>
	<%=render "layouts/head"%>
</head>
<body>
	<div class="container">
		<div style="padding-top:60px;">
		<% if notice %>
		<div class="alert alert-success"><%= notice %></div>
		<% end %>
		<% if alert %>
		<div class="alert alert-danger"><%= alert %></div>
		<% end %>
	</div>
		<header role="banner" class="navbar navbar-default navbar-fixed-top bs-docs-nav">
		  <div class="container">
		    <div class="navbar-header">
		      <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
					<%=link_to "&nbsp;Home".html_safe, root_path, :class => "navbar-brand fa fa-home"%>
		    </div>
		    <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">
		      <ul class="nav navbar-nav">
						<% if user_signed_in?%>
						<li><%=link_to "&nbsp;Edit your account".html_safe, edit_user_registration_path, :class => "fa fa-pencil"%></li>
		        <li><%=link_to "&nbsp;Upload profile picture".html_safe, profile_upload_avatar_path(current_user), :class => "fa fa-upload"%></li>
						<li><%=link_to "&nbsp;Upload banner image".html_safe, profile_upload_banner_path(current_user), :class => "fa fa-upload"%></li>
						<li><%=link_to "&nbsp;View profile picture".html_safe, profile_path(current_user.id), :class => "fa fa-camera-retro"%></li>
   					<li><%=link_to "&nbsp;Logout".html_safe,destroy_user_session_path, :method => 'delete', :class => "fa fa-sign-out" %></li>
						<%else%>
		        <li>
							<%=link_to "&nbsp;Sign in".html_safe, new_user_session_path, :class => "fa fa-sign-in"%>
		        </li>
						<%end%>
		      </ul>
		      <ul class="nav navbar-nav navbar-right">
		        <li>
				<% if user_signed_in?%>
					<%=render "layouts/person", :size => "mini"%>
				<%else%>
				  <%=link_to "About us", "#about_us_path"%>
				<%end%>
		        </li>
		      </ul>
		    </nav>
		  </div>
		</header>
		<div class="row" id="user-auth">
			<%if params[:controller] == "profiles"%>
				<div class="col-md-1 col-md-10 col-md-offset-1">
			<%else%>
			<div class="col-md-6 col-md-offset-3">
				<%end%>
				<div class="panel panel-info">
					<div class="panel-heading">
						<h3 class="panel-title"><i class="fa fa-user"></i> <%=yield(:heading)%></h3>
					</div>
					<div class="panel-body">
						<%=yield%>
					</div>
					<div class="panel-footer">
						<%if params[:controller] == "profiles" || (params[:controller] == "registrations" && params[:action] == "edit")%>
						need to replace content
						<%else%>
							<%= render "devise/shared/links" %>
					<%end%>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
