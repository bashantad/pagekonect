<div id="news">
    <%if @events.blank?%>
        <div class="alert alert-info">
            No Registered Events
        </div>
    <%end%>

    <div>
        <label for="category_select"> Select Category</label>
        <%= select_tag "Cateogry", options_for_select(Event::CATEGORIES), id: :category_select %>
    </div>
    <div id="event_index_container">
        <% if @events.present? %>
            <% @events.each_with_index do |row, index| %>
                <%if (index+1)%4 == 0%>
                    <div class="row news-row">
                <%end %>
                    <%=render "events/event_block", :row => row%>
                <%if (index+1)%4==0%>
                    </div>
                <%end%>
            <% end %>
        <% else %>
            No Events Found.
        <% end %>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('#category_select').on("change", function(){
            value = $(this).val()

            $.ajax({
                url : '<%= events_path() %>',
                data : {
                    category : value
                },
                type : "get",
                dataType : "html"
            }).done(function(response){
                rsp_html = $(response).find('#event_index_container').html()
                $('#event_index_container').html(rsp_html);
            })
        })    
    })
    
</script>