<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@news.errors.count, "error") %> prohibited this faculty from being saved:</h4>

      	<ul>
      <% @news.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-item">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-item">
    <%= f.label :description %>
  	<%#= f.cktext_area :description, :id => "sometext" %>
    <%= f.text_area :description, :class => "form-control", :rows => 8 %>
  </div>
	<div class="form-item">
		<%=f.label :upload_image%>
		<%=f.file_field :image%>
	</div>
	<div class="form-item">
		<%=f.label :image_description%>
		<%=f.text_field :image_description, :class => "form-control"%>
	</div>
	
	<div class="form-item">
		<%=f.label :url%>
		<%=f.url_field :url, :class => "form-control"%>
	</div>
	
	<div class="form-item">
		<label>Would you like people to search this on search engine?</label>
		<%=f.check_box :is_searchable%> Yes
	</div>

  <div class="actions">
    <%= f.submit(:class => "btn btn-primary") %>
  </div>
<% end %>
