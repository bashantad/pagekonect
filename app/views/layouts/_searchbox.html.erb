<div class="search-wrapper">
    <div class="input-group add-on">
        <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-list fa-2x popover-btn" data-content="Click here to see all the menu options"></i>
            </button>
            <ul class="dropdown-menu">
                <%=render "layouts/navbar"%>
            </ul>
        </div>
        <form action="" method="get">
            <input class="input-lg typeahead search-data" type="text" placeholder="What are you searching for?" id="search-data" name="keyword" >
        </form>
        <div class="input-group-btn">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-camera fa-2x popover-btn" data-content="Click here either to upload picture from computer or to capture from camera"></i>
                </button>
                <ul class="dropdown-menu">
                    <li><%=link_to "Take a picture", "#", :class => "fancybox"%></li>
                    <li class="divider"></li>
                    <li><%=link_to "Upload picture", uploads_path, :class => "fancybox"%></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<script>
$('.search-data').typeahead({
	prefetch: '/pages/all/search'
});
</script>