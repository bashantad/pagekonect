<!DOCTYPE html>
<html>
<head>
	<%=render "layouts/head"%>
    <style>
        body{background:#fff;background-image:none;}
    </style>
</head>
<body>
	<div class="containers">	
		<%= render partial: "shared/user_notice" %>
        <div class="row" id="search-engine">
            <h2 class="text-center"><span id="time"></span></h2>
        	<div class="text-center date-wrapp"><span  id="date"></span></div>
            <%if params[:controller] == "pages" && params[:action] == "index" %>
                <%=render "layouts/searchbox"%>
            <%else%>
                <%=render "layouts/statusbar"%>
            <%end%>
        </div>
		<%= yield %>
	</div>	
</body>
</html>
